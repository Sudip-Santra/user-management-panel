<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header" style="background-color: #262e2d;">
                        <h3 class="text-light mt-2">Add New User</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="POST" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="fs-6" style="font-weight: 500;">Name:</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required style="font-size: 0.9rem;">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="fs-6" style="font-weight: 500;">Email:</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Email" required style="font-size: 0.9rem;">
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="fs-6" style="font-weight: 500;">Phone No:</label>
                                <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Phone Number" required style="font-size: 0.9rem;">
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label fs-6" style="font-weight: 500;">Select Image:</label>
                                <input type="file" name="image" class="form-control form-control-lg" placeholder="Select Image" required style="font-size: 0.9rem;">
                            </div>
                            <div class="mb-3">
                                <label for="status" class="form-label fs-6" style="font-weight: 500;">Status:</label>
                                <select name="status" id="status" class="form-select" required>
                                    <option value="active">active</option>
                                    <option value="inactive">inactive</option>
                                </select>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add User" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('layout/footer') %>
