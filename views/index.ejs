<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close float-end" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>                            
            <% } %>
            <div class="table-responsive">
                <% if (users != '') { %>
                    <table class="table table-striped table-bordered text-center my-3" id="user-table">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Images</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Phone</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td class="text-center"><%= index %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td class="text-center"><%= row.phone %></td>
                                    <td>
                                        <% if (row.status==='inactive' ) { %>
                                            <span class="badge border border-danger text-danger">
                                                <%= row.status %>
                                            </span>
                                            <% } else { %>
                                                <span class="badge border border-success text-success">
                                                    <%= row.status %>
                                                </span>
                                                <% } %>
                                    </td>
                                    
                                    <td>
                                        <a href="/edit/<%= row._id  %>"><button class="btn btn-primary btn-sm">Edit</button></a>
                                        <a href="/delete/<%= row._id  %>"><button class="btn btn-danger btn-sm">Delete</button></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
                
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>